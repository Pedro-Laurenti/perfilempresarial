{
    "version": 2,
    "builds": [
        {
            "src": "server/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/form",
            "dest": "server/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/index.html"
        }
    ]
}